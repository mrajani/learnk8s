[k8s_master]
k8scp1 ansible_host=myhost2c.example.com

[k8s_ha_master]
k8scp2 ansible_host=myhost3c.example.com

[k8s_worker]
k8swk1 ansible_host=myhost4c.example.com
k8swk2 ansible_host=myhost5c.example.com
k8swk3 ansible_host=myhost6c.example.com

[loadbalancer]
k8slb ansible_host=myhost1c.example.com

[sudoer:children]
loadbalancer
k8s_master
k8s_ha_master
k8s_worker

[ubuntu]
k8slb ansible_host=myhost1c.example.com
k8scp1 ansible_host=myhost2c.example.com
k8scp2 ansible_host=myhost3c.example.com
k8swk1 ansible_host=myhost4c.example.com
k8swk2 ansible_host=myhost5c.example.com

[centos]
k8swk3 ansible_host=myhost6c.example.com
